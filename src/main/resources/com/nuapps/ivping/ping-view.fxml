<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="460.0" prefWidth="813.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nuapps.ivping.PingController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu text="_Arquivo">
                <MenuItem onAction="#doExit" text="Sai_r">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator>
                </MenuItem>
            </Menu>
            <Menu text="_Ferramentas">
                <MenuItem onAction="#pingSelectedHost" text="_Ping">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator>
                </MenuItem>
                <MenuItem onAction="#openSSHSession" text="SS_H">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator>
                </MenuItem>
                <MenuItem onAction="#openTelnetSession" text="_Telnet">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                    </accelerator></MenuItem>
            </Menu>
            <Menu text="Aj_uda">
                <MenuItem onAction="#showAboutDialog" text="_Sobre o Ivping..." />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <BorderPane BorderPane.alignment="CENTER">
            <top>
                <ToolBar prefHeight="40.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                    <padding>
                        <Insets left="12.0" />
                    </padding>
                    <Button mnemonicParsing="false" onAction="#pingSelectedHost">
                        <graphic>
                            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../../../images/ping24.png" />
                            </ImageView>
                        </graphic>
                        <tooltip>
                            <Tooltip text="Ping (Ctrl+P)" />
                        </tooltip></Button>
                    <CheckBox fx:id="tCheckBox" mnemonicParsing="false" text="-t" />
                    <Separator visible="false" />
                    <Button mnemonicParsing="false" onAction="#openSSHSession">
                        <graphic>
                            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../../../images/browser24.png" />
                            </ImageView>
                        </graphic>
                        <tooltip>
                            <Tooltip text="SSH (Ctrl+H)" />
                        </tooltip></Button>
                    <Separator visible="false" />
                    <TextField fx:id="searchTextField" prefWidth="250.0" promptText="Pesquisar" stylesheets="@MyTheme.css" />
                    <Button mnemonicParsing="false" onAction="#clearTextField" style="-fx-background-color: transparent;">
                        <graphic>
                            <ImageView pickOnBounds="true" preserveRatio="true">
                                <Image url="@../../../images/1564505_icon.png" />
                            </ImageView>
                        </graphic>
                        <padding>
                            <Insets right="5.0" />
                        </padding>
                        <tooltip>
                            <Tooltip text="Limpar pesquisa" />
                        </tooltip></Button>
                    <Button mnemonicParsing="false" onAction="#showSearchMoreOptionsDialog">
                        <tooltip>
                            <Tooltip text="Pesquisa - Mais opções" />
                        </tooltip>
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../../../images/Filter_Plus_16.png" />
                            </ImageView>
                        </graphic></Button>
                    <Separator orientation="VERTICAL" />
                    <HBox alignment="CENTER_LEFT" spacing="6.0">
                        <Button mnemonicParsing="false" onAction="#openTmnWebsite" text="TMN" textAlignment="CENTER">
                            <tooltip>
                                <Tooltip text="TMN" />
                            </tooltip>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#openCiscoPrimeWebsite" text="Cisco Prime">
                            <tooltip>
                                <Tooltip text="Cisco Prime" />
                            </tooltip>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#openZabbixWebsite" text="Zabbix">
                            <tooltip>
                                <Tooltip text="Zabbix" />
                            </tooltip>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                        </Button>
                  <Button mnemonicParsing="false" onAction="#openSigmonWebsite" text="Sigmon">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <tooltip>
                        <Tooltip text="Sigmon" />
                     </tooltip>
                  </Button>
                  <Separator orientation="VERTICAL" />
                        <Button mnemonicParsing="false" onAction="#showPingAnyIpDialog" text="Ping">
                            <tooltip>
                                <Tooltip text="Pingar outro IP" />
                            </tooltip>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                        </Button>
                    </HBox>
                </ToolBar>
            </top>
            <center>
                <TableView fx:id="tableView" editable="true" stylesheets="@MyTheme.css" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="hostNameTableColumn" text="  Host Name" />
                        <TableColumn fx:id="ipAddressTableColumn" text="  IP Address" />
                        <TableColumn fx:id="locationTableColumn" text="  Device Location" />
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
            </center>
        </BorderPane>
    </center>
</BorderPane>
