<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="130.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/20.0.1" fx:controller="com.nuapps.ivping.PingAnyIpDialogController">
    <GridPane prefHeight="130.0" prefWidth="340.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Button defaultButton="true" onAction="#handlePing" prefWidth="80.0" text="_Ping" GridPane.columnIndex="2">
            <GridPane.margin>
                <Insets left="10.0" />
            </GridPane.margin>
        </Button>
        <Button onAction="#clearTextField" prefWidth="80.0" text="_Limpar" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="10.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="cancelButton" cancelButton="true" onAction="#handleCancelButtonClick" prefWidth="80.0" text="_Cancelar" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="2">
            <TextField fx:id="enterIpAddressTextField" promptText="192.168.0.100">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </TextField>
            <CheckBox fx:id="t2CheckBox" mnemonicParsing="false" text="-t" />
        </HBox>
    </GridPane>
</AnchorPane>
